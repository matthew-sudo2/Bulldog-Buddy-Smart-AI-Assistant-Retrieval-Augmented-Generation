# Configuration file for the integrated system

# PostgreSQL Configuration (Main Database)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bulldog_buddy
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# pgvector Configuration
PGVECTOR_DIMENSION=768

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# API Bridge Configuration
API_BRIDGE_HOST=127.0.0.1
API_BRIDGE_PORT=8001

# Frontend Configuration
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# Streamlit Configuration
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501

# Session Configuration
SESSION_SECRET=your-long-random-secret-key-change-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Ollama Configuration (if using remote instance)
OLLAMA_HOST=http://localhost:11434

# Development vs Production
NODE_ENV=development